---
// web/src/components/blocks/Content.astro

// Теперь Payload сам присылает нам поле body_html
const {body_html} = Astro.props;
---

<section style='max-width: 800px; margin: 0 auto; padding: 2rem;'>
	{
		!body_html && (
			<p style='color: red'>
				HTML не сгенерирован. Зайди в админку и пересохрани страницу!
			</p>
		)
	}

	<div
		class='rich-text'
		set:html={body_html}
	/>
</section>

<style is:global>
	/* Базовые стили для контента, так как прилетает "голый" HTML */
	.rich-text h1 {
		font-size: 2.5rem;
		font-weight: bold;
		margin-bottom: 1rem;
	}
	.rich-text h2 {
		font-size: 2rem;
		font-weight: bold;
		margin-top: 2rem;
		margin-bottom: 1rem;
	}
	.rich-text p {
		margin-bottom: 1rem;
		line-height: 1.6;
		color: #374151;
	}
	.rich-text ul {
		list-style: disc;
		padding-left: 1.5rem;
		margin-bottom: 1rem;
	}
	.rich-text ol {
		list-style: decimal;
		padding-left: 1.5rem;
		margin-bottom: 1rem;
	}
	.rich-text a {
		color: #2563eb;
		text-decoration: underline;
	}
	.rich-text strong {
		font-weight: bold;
	}
</style>
